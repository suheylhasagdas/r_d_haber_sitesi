@{
}
@using AdminUI.Models
@model YorumViewModel
<div class="container">
	<div class="page-title">
		<h3>Yorum İşlemleri</h3>
	</div>
	<div class="row">

		<div class="col-md-12 col-lg-12">
			<div class="card">
				<div class="card-header">Yorum Güncelle</div>
				<div class="card-body">
					<p class="card-title">Yorum güncelleme işlemi yapabilirsiniz.</p>

					@using (Html.BeginForm("YorumGuncelle", "Yorum", FormMethod.Post))
					{
						@Html.HiddenFor(x=>x.Id)
						<div class="mb-3">
							<label for="email" class="form-label">Ad</label>
							@Html.TextBoxFor(x => x.Ad, new { placeholder = "Ad", @class = "form-control" })
						</div>
						<div class="mb-3">
							<label for="email" class="form-label">Soyad</label>
							@Html.TextBoxFor(x => x.Soyad, new { placeholder = "Soyad", @class = "form-control" })
						</div>
						<div class="mb-3">
							<label for="email" class="form-label">E-Posta</label>
							@Html.TextBoxFor(x => x.Eposta, new { placeholder = "E-Posta", @class = "form-control" })
						</div>
						<div class="mb-3">
							<label for="email" class="form-label">Başlık</label>
							@Html.TextBoxFor(x => x.Baslik, new { placeholder = "Başlık", @class = "form-control" })
						</div>
						<div class="mb-3">
							<label for="email" class="form-label">İçerik</label>
							@Html.TextBoxFor(x => x.Icerik, new { placeholder = "İçerik", @class = "form-control" })
						</div>
						<div class="mb-3">
							<label for="email" class="form-label">Haber Id</label>
							@Html.TextBoxFor(x => x.HaberId, new { placeholder = "Haber Id", @class = "form-control" })
						</div>
						<div class="mb-3">
							<label for="email" class="form-label">Statü</label>
							<div class="form-check form-switch">
								@Html.CheckBoxFor(x => x.Aktifmi, new { @class = "form-check-input" })
							</div>
						</div>
						<br />
						<button type="submit" class="btn btn-primary">Guncelle</button>
					}
				</div>
			</div>
		</div>
	</div>
</div>