@using AdminUI.Models
@model SlaytViewModel
<div class="container">
	<div class="page-title">
		<h3>Slayt İşlemleri</h3>
	</div>
	<div class="row">

		<div class="col-md-12 col-lg-12">
			<div class="card">
				<div class="card-header">Slayt Güncelle</div>
				<div class="card-body">
					<p class="card-title">Slayt güncelleme işlemi yapabilirsiniz.</p>

					@using (Html.BeginForm("SlaytGuncelle", "Slayt", FormMethod.Post, new { enctype = "multipart/form-data" }))
					{
						@Html.HiddenFor(x=>x.Id)
						<div class="mb-3">
							<label for="email" class="form-label">Başlık</label>
							@Html.TextBoxFor(x => x.Baslik, new { placeholder = "Başlık", @class = "form-control" })
						</div>
						<div class="mb-3">
							<label for="email" class="form-label">İçerik</label>
							@Html.TextBoxFor(x => x.Icerik, new { placeholder = "İçerik", @class = "form-control" })
						</div>
						<div class="mb-3">
							<label for="email" class="form-label">Geçerli Resim</label><br />
							<img src="@Url.Content(@conf.GetSection("Ayarlar")["ApiUrl"] + Model.Resim)" style="max-height:250px;" />
							@Html.HiddenFor(x => x.Resim)
						</div>
						<div class="mb-3">
							<label for="email" class="form-label">Resim</label>
							@Html.TextBoxFor(x => x.ResimFile, new { type = "file", @class = "form-control" })
						</div>
						<div class="mb-3">
							<label for="email" class="form-label">Haber</label>
							@Html.DropDownListFor(x => x.HaberId, Model.Haberler, new { placeholder = "Haber Seçiniz", @class = "form-select" })
						</div>
						<div class="mb-3">
							<label for="email" class="form-label">Statü</label>
							<div class="form-check form-switch">
								@Html.CheckBoxFor(x => x.Aktifmi, new { @class = "form-check-input" })
							</div>
						</div>
						<br />
						<button type="submit" class="btn btn-warning">Güncelle</button>
					}
				</div>
			</div>
		</div>
	</div>
</div>