@using AdminUI.Models
@model HaberViewModel
<div class="container">
	<div class="page-title">
		<h3>Haber İşlemleri</h3>
	</div>
	<div class="row">

		<div class="col-md-12 col-lg-12">
			<div class="card">
				<div class="card-header">Haber Ekle</div>
				<div class="card-body">
					<p class="card-title">Haber ekleme işlemi yapabilirsiniz.</p>

					@using (Html.BeginForm("HaberEkle", "Haber", FormMethod.Post, new { enctype = "multipart/form-data" }))
					{
						@Html.HiddenFor(x => x.GosterimSayisi, new { value = "0"})
						<div class="mb-3">
							<label for="email" class="form-label">Başlık</label>
							@Html.TextBoxFor(x => x.Baslik, new { placeholder = "Başlık", @class = "form-control" })
						</div>
						<div class="mb-3">
							<label for="email" class="form-label">İçerik</label>
							@Html.TextAreaFor(x => x.Icerik, new { placeholder = "İçerik", @class = "form-control" })
						</div>
						<div class="mb-3">
							<label for="email" class="form-label">Resim</label>
							@Html.TextBoxFor(x => x.ResimFile, new { type = "file", @class = "form-control" })
						</div>
						<div class="mb-3">
							<label for="email" class="form-label">Video</label>
							@Html.TextBoxFor(x => x.VideoFile, new { type = "file", @class = "form-control" })
						</div>
						<div class="mb-3">
							<label for="email" class="form-label">Kategori</label>
							@Html.DropDownListFor(x => x.KategoriId, Model.Kategoriler, new { placeholder = "Kategori Seçiniz", @class = "form-select" })
						</div>
						<div class="mb-3">
							<label for="email" class="form-label">Yazar</label>
							@Html.DropDownListFor(x => x.YazarId, Model.Yazarlar, new { placeholder = "Yazar Seçiniz", @class = "form-select" })
						</div>
						<div class="mb-3">
							<label for="email" class="form-label">Statü</label>
							<div class="form-check form-switch">
								@Html.CheckBoxFor(x => x.Aktifmi, new { @class = "form-check-input" })
							</div>
						</div>
						<br />
						<button type="submit" class="btn btn-primary">Ekle</button>
					}
				</div>
			</div>
		</div>
	</div>
</div>