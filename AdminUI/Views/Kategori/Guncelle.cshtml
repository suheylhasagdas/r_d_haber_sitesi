@{
}
@using AdminUI.Models
@model KategoriViewModel
<div class="container">
	<div class="page-title">
		<h3>Kategori İşlemleri</h3>
	</div>
	<div class="row">

		<div class="col-md-12 col-lg-12">
			<div class="card">
				<div class="card-header">Kategori Güncelle</div>
				<div class="card-body">
					<p class="card-title">Kategoriler güncelleme işlemi yapabilirsiniz.</p>

					@using (Html.BeginForm("KategoriGuncelle", "Kategori", FormMethod.Post))
					{
						@Html.HiddenFor(x=>x.Id)
						<div class="mb-3">
							<label for="email" class="form-label">Kategori Açıklaması</label>
							@Html.TextBoxFor(x => x.Aciklama, new { placeholder = "Açıklama", @class = "form-control" })
						</div>
						<div class="mb-3">
							<label for="email" class="form-label">Statü</label>
							<div class="form-check form-switch">
								@Html.CheckBoxFor(x => x.Aktifmi, new { @class = "form-check-input" })
							</div>
						</div>
						<br />
						<button type="submit" class="btn btn-warning">Güncelle</button>
					}
				</div>
			</div>
		</div>
	</div>
</div>